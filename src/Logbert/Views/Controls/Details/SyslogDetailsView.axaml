<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Logbert.ViewModels.Controls.Details"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="400"
             x:Class="Logbert.Views.Controls.Details.SyslogDetailsView"
             x:DataType="vm:SyslogDetailsViewModel">

    <ScrollViewer>
        <StackPanel Spacing="10" Margin="10">
            <!-- Header with Severity Badge -->
            <Grid ColumnDefinitions="Auto,Auto,*,Auto">
                <Border Grid.Column="0"
                        Padding="8,4"
                        CornerRadius="4"
                        Background="{Binding SeverityBackground}"
                        Margin="0,0,10,0">
                    <TextBlock Text="{Binding Severity}"
                               Foreground="White"
                               FontWeight="Bold"/>
                </Border>

                <Border Grid.Column="1"
                        Padding="8,4"
                        CornerRadius="4"
                        Background="{Binding FacilityBackground}"
                        Margin="0,0,10,0">
                    <TextBlock Text="{Binding Facility}"
                               Foreground="White"
                               FontWeight="Bold"/>
                </Border>

                <TextBlock Grid.Column="2"
                           Text="{Binding FormattedTimestamp}"
                           VerticalAlignment="Center"
                           FontSize="14"
                           FontWeight="SemiBold"/>

                <TextBlock Grid.Column="3"
                           Text="{Binding IndexDisplay}"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
            </Grid>

            <Separator/>

            <!-- Syslog Metadata -->
            <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="10"
                    Background="{DynamicResource SystemControlBackgroundAltHighBrush}">
                <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="150,*" RowSpacing="8">
                    <!-- Facility -->
                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="Facility:"
                               FontWeight="Bold"/>
                    <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="{Binding Facility}"/>
                        <TextBlock Text="{Binding FacilityDescription}"
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                   FontStyle="Italic"/>
                    </StackPanel>

                    <!-- Severity -->
                    <TextBlock Grid.Row="1" Grid.Column="0"
                               Text="Severity:"
                               FontWeight="Bold"/>
                    <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="{Binding Severity}"/>
                        <TextBlock Text="{Binding SeverityDescription}"
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                   FontStyle="Italic"/>
                    </StackPanel>

                    <!-- Logger/Host -->
                    <TextBlock Grid.Row="2" Grid.Column="0"
                               Text="Host/Logger:"
                               FontWeight="Bold"/>
                    <TextBlock Grid.Row="2" Grid.Column="1"
                               Text="{Binding Logger}"
                               TextWrapping="Wrap"/>

                    <!-- Local Timestamp -->
                    <TextBlock Grid.Row="3" Grid.Column="0"
                               Text="Local Time:"
                               FontWeight="Bold"/>
                    <TextBlock Grid.Row="3" Grid.Column="1"
                               Text="{Binding FormattedLocalTimestamp}"/>
                </Grid>
            </Border>

            <!-- Timestamps Section -->
            <Expander Header="Timestamps" IsExpanded="True">
                <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="10"
                        Margin="0,8,0,0"
                        Background="{DynamicResource SystemControlBackgroundAltHighBrush}">
                    <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="150,*" RowSpacing="8">
                        <TextBlock Grid.Row="0" Grid.Column="0"
                                   Text="Message Time:"
                                   FontWeight="Bold"/>
                        <TextBlock Grid.Row="0" Grid.Column="1"
                                   Text="{Binding FormattedTimestamp}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0"
                                   Text="Received Time:"
                                   FontWeight="Bold"/>
                        <TextBlock Grid.Row="1" Grid.Column="1"
                                   Text="{Binding FormattedLocalTimestamp}"/>
                    </Grid>
                </Border>
            </Expander>

            <!-- Message Content -->
            <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="10">
                <StackPanel Spacing="8">
                    <TextBlock Text="Message"
                               FontWeight="Bold"
                               FontSize="14"/>

                    <TextBox Text="{Binding MessageText}"
                             IsReadOnly="True"
                             TextWrapping="Wrap"
                             MinHeight="80"
                             AcceptsReturn="True"
                             FontFamily="Consolas,Courier New,monospace"
                             Background="Transparent"
                             BorderThickness="0"/>
                </StackPanel>
            </Border>

            <!-- Raw Data -->
            <Expander Header="Raw Syslog Data" IsExpanded="False">
                <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="10"
                        Margin="0,8,0,0">
                    <TextBox Text="{Binding RawData}"
                             IsReadOnly="True"
                             TextWrapping="Wrap"
                             MinHeight="60"
                             MaxHeight="200"
                             AcceptsReturn="True"
                             FontFamily="Consolas,Courier New,monospace"
                             FontSize="10"
                             Background="Transparent"
                             BorderThickness="0"/>
                </Border>
            </Expander>
        </StackPanel>
    </ScrollViewer>
</UserControl>
