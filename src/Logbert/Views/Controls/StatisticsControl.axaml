<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Couchcoding.Logbert.ViewModels.Controls"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="500"
             x:Class="Couchcoding.Logbert.Views.Controls.StatisticsControl"
             x:DataType="vm:StatisticsViewModel">

    <Design.DataContext>
        <vm:StatisticsViewModel/>
    </Design.DataContext>

    <ScrollViewer>
        <StackPanel Spacing="20" Margin="20">
            <!-- Summary Section -->
            <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="15">
                <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="150,*">
                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="Total Messages:"
                               FontWeight="Bold"
                               Margin="0,0,10,8"/>
                    <TextBlock Grid.Row="0" Grid.Column="1"
                               Text="{Binding TotalMessages, StringFormat='{}{0:N0}'}"
                               Margin="0,0,0,8"/>

                    <TextBlock Grid.Row="1" Grid.Column="0"
                               Text="First Message:"
                               FontWeight="Bold"
                               Margin="0,0,10,8"/>
                    <TextBlock Grid.Row="1" Grid.Column="1"
                               Text="{Binding FirstMessageTime, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss.fff}'}"
                               Margin="0,0,0,8"/>

                    <TextBlock Grid.Row="2" Grid.Column="0"
                               Text="Last Message:"
                               FontWeight="Bold"
                               Margin="0,0,10,8"/>
                    <TextBlock Grid.Row="2" Grid.Column="1"
                               Text="{Binding LastMessageTime, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss.fff}'}"
                               Margin="0,0,0,8"/>

                    <TextBlock Grid.Row="3" Grid.Column="0"
                               Text="Time Range:"
                               FontWeight="Bold"
                               Margin="0,0,10,8"/>
                    <TextBlock Grid.Row="3" Grid.Column="1"
                               Text="{Binding TimeRange}"
                               Margin="0,0,0,8"/>

                    <TextBlock Grid.Row="4" Grid.Column="0"
                               Text="Messages/Second:"
                               FontWeight="Bold"
                               Margin="0,0,10,0"/>
                    <TextBlock Grid.Row="4" Grid.Column="1"
                               Text="{Binding MessagesPerSecond, StringFormat='{}{0:F2}'}"/>
                </Grid>
            </Border>

            <!-- Log Level Distribution -->
            <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="15">
                <StackPanel Spacing="10">
                    <TextBlock Text="Log Level Distribution"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>

                    <ItemsControl ItemsSource="{Binding Statistics}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="vm:LogLevelStatistic">
                                <Border Padding="0,8"
                                        BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                                        BorderThickness="0,0,0,1"
                                        Margin="0,0,0,8">
                                    <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="100,*,100">
                                        <!-- Level Name -->
                                        <TextBlock Grid.Row="0" Grid.Column="0"
                                                   Text="{Binding Level}"
                                                   FontWeight="SemiBold"
                                                   VerticalAlignment="Center"/>

                                        <!-- Progress Bar -->
                                        <Border Grid.Row="0" Grid.Column="1"
                                                Height="24"
                                                CornerRadius="4"
                                                Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                                                Margin="10,0">
                                            <Grid>
                                                <Border CornerRadius="4"
                                                        HorizontalAlignment="Left"
                                                        Width="{Binding Percentage, Converter={StaticResource PercentageToWidthConverter}}">
                                                    <Border.Background>
                                                        <SolidColorBrush Color="{Binding Color, Converter={StaticResource StringToColorConverter}}"/>
                                                    </Border.Background>
                                                </Border>

                                                <!-- Percentage Label -->
                                                <TextBlock Text="{Binding Percentage, StringFormat='{}{0:F1}%'}"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"
                                                           FontSize="11"
                                                           FontWeight="Bold"/>
                                            </Grid>
                                        </Border>

                                        <!-- Count -->
                                        <TextBlock Grid.Row="0" Grid.Column="2"
                                                   Text="{Binding Count, StringFormat='{}{0:N0}'}"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Center"
                                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Empty State -->
                    <TextBlock Text="No statistics available"
                               HorizontalAlignment="Center"
                               Margin="0,20"
                               FontSize="14"
                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                               IsVisible="{Binding !Statistics.Count}"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
