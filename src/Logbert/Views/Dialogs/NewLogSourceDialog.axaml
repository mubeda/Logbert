<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:Couchcoding.Logbert.ViewModels.Dialogs"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="500"
        x:Class="Couchcoding.Logbert.Views.Dialogs.NewLogSourceDialog"
        x:DataType="vm:NewLogSourceDialogViewModel"
        Title="New Log Source"
        Width="600" Height="500"
        WindowStartupLocation="CenterOwner"
        CanResize="False">

    <DockPanel Margin="10">
        <!-- Buttons at bottom -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,10,0,0">
            <Button Content="OK" Click="OnOkClick" Width="80" IsDefault="True" IsEnabled="{Binding SelectedReceiver, Converter={x:Static ObjectConverters.IsNotNull}}"/>
            <Button Content="Cancel" Click="OnCancelClick" Width="80" IsCancel="True"/>
        </StackPanel>

        <!-- Main content -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0" Text="Select a log source type:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>

            <!-- Receiver list grouped by category -->
            <ListBox Grid.Row="1"
                     ItemsSource="{Binding AvailableReceivers}"
                     SelectedItem="{Binding SelectedReceiver}"
                     Background="#FAFAFA">

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="5">
                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="13"/>
                            <TextBlock Text="{Binding Category}" FontSize="11" Opacity="0.7"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Description -->
            <Border Grid.Row="2"
                    Background="#F0F0F0"
                    BorderBrush="#D0D0D0"
                    BorderThickness="1"
                    Padding="10"
                    Margin="0,10,0,0"
                    MinHeight="60">
                <TextBlock Text="{Binding Description}"
                           TextWrapping="Wrap"
                           VerticalAlignment="Center"/>
            </Border>
        </Grid>
    </DockPanel>
</Window>
