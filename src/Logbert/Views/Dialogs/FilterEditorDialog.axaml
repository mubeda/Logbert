<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:Logbert.ViewModels.Dialogs"
        mc:Ignorable="d" d:DesignWidth="550" d:DesignHeight="550"
        x:Class="Logbert.Views.Dialogs.FilterEditorDialog"
        x:DataType="vm:FilterEditorDialogViewModel"
        Title="{Binding DialogTitle}"
        Width="550" Height="550"
        CanResize="False"
        WindowStartupLocation="CenterOwner"
        Icon="/Assets/avalonia-logo.ico">

    <Design.DataContext>
        <vm:FilterEditorDialogViewModel/>
    </Design.DataContext>

    <DockPanel Margin="20">
        <!-- Header -->
        <StackPanel DockPanel.Dock="Top" Margin="0,0,0,20">
            <TextBlock Text="{Binding DialogTitle}"
                       FontSize="18"
                       FontWeight="Bold"/>
            <TextBlock Text="Configure filter conditions to show or hide log messages."
                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel DockPanel.Dock="Bottom"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Spacing="10"
                    Margin="0,20,0,0">
            <Button Content="OK"
                    Padding="30,8"
                    Command="{Binding AcceptCommand}"
                    IsDefault="True"/>
            <Button Content="Cancel"
                    Padding="30,8"
                    Command="{Binding CancelCommand}"
                    IsCancel="True"/>
        </StackPanel>

        <!-- Form Content -->
        <ScrollViewer>
            <StackPanel Spacing="15">
                <!-- Filter Name -->
                <StackPanel Spacing="5">
                    <TextBlock Text="Filter Name:" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding FilterName}"
                             Watermark="Enter a descriptive name for this filter..."/>
                </StackPanel>

                <!-- Enabled Checkbox -->
                <CheckBox Content="Filter is enabled"
                          IsChecked="{Binding IsEnabled}"/>

                <!-- Filter Condition Section -->
                <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="15"
                        Margin="0,10,0,0">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Filter Condition"
                                   FontWeight="SemiBold"
                                   FontSize="14"/>

                        <!-- Column Selection -->
                        <Grid ColumnDefinitions="120,*" RowDefinitions="Auto">
                            <TextBlock Text="Column:"
                                       VerticalAlignment="Center"/>
                            <ComboBox Grid.Column="1"
                                      ItemsSource="{Binding Columns}"
                                      SelectedIndex="{Binding SelectedColumnIndex}"
                                      HorizontalAlignment="Stretch"/>
                        </Grid>

                        <!-- Operator Selection -->
                        <Grid ColumnDefinitions="120,*" RowDefinitions="Auto">
                            <TextBlock Text="Operator:"
                                       VerticalAlignment="Center"/>
                            <ComboBox Grid.Column="1"
                                      ItemsSource="{Binding Operators}"
                                      SelectedIndex="{Binding SelectedOperatorIndex}"
                                      HorizontalAlignment="Stretch"/>
                        </Grid>

                        <!-- Value -->
                        <Grid ColumnDefinitions="120,*" RowDefinitions="Auto">
                            <TextBlock Text="Value:"
                                       VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1"
                                     Text="{Binding FilterValue}"
                                     Watermark="Enter filter value or regex pattern..."/>
                        </Grid>

                        <!-- Case Sensitive -->
                        <Grid ColumnDefinitions="120,*" RowDefinitions="Auto">
                            <TextBlock Text="" />
                            <CheckBox Grid.Column="1"
                                      Content="Case sensitive"
                                      IsChecked="{Binding CaseSensitive}"/>
                        </Grid>

                        <!-- Validation Message -->
                        <Border IsVisible="{Binding ValidationMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                Background="{Binding IsValid, Converter={StaticResource BoolToBackgroundConverter}}"
                                CornerRadius="4"
                                Padding="10,8">
                            <TextBlock Text="{Binding ValidationMessage}"
                                       Foreground="{Binding IsValid, Converter={StaticResource BoolToForegroundConverter}}"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Test Section -->
                <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="15"
                        Margin="0,5,0,0">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Test Filter"
                                   FontWeight="SemiBold"
                                   FontSize="14"/>

                        <TextBlock Text="Enter sample text to test your filter:"
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>

                        <TextBox Text="{Binding SampleText}"
                                 Watermark="Enter sample log message text to test..."
                                 AcceptsReturn="True"
                                 Height="60"
                                 TextWrapping="Wrap"/>

                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <Button Content="Test Filter"
                                    Command="{Binding TestFilterCommand}"
                                    Padding="20,6"/>
                            <Button Content="Clear"
                                    Command="{Binding ClearTestCommand}"
                                    Padding="20,6"/>
                        </StackPanel>

                        <!-- Test Result -->
                        <Border IsVisible="{Binding TestResultMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                Background="{Binding TestPassed, Converter={StaticResource BoolToBackgroundConverter}}"
                                CornerRadius="4"
                                Padding="10,8">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <PathIcon Data="{Binding TestPassed, Converter={StaticResource BoolToIconConverter}}"
                                          Width="16" Height="16"
                                          Foreground="{Binding TestPassed, Converter={StaticResource BoolToForegroundConverter}}"/>
                                <TextBlock Text="{Binding TestResultMessage}"
                                           Foreground="{Binding TestPassed, Converter={StaticResource BoolToForegroundConverter}}"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>

    <Window.Resources>
        <!-- Bool to Background Converter -->
        <SolidColorBrush x:Key="SuccessBackground" Color="#E8F5E9"/>
        <SolidColorBrush x:Key="ErrorBackground" Color="#FFEBEE"/>
        <SolidColorBrush x:Key="SuccessForeground" Color="#2E7D32"/>
        <SolidColorBrush x:Key="ErrorForeground" Color="#C62828"/>
    </Window.Resources>

    <Window.Styles>
        <Style Selector="Border.success">
            <Setter Property="Background" Value="#E8F5E9"/>
        </Style>
        <Style Selector="Border.error">
            <Setter Property="Background" Value="#FFEBEE"/>
        </Style>
    </Window.Styles>
</Window>
