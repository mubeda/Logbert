<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:Logbert.ViewModels.Dialogs"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="500"
        x:Class="Logbert.Views.Dialogs.WelcomeDialog"
        x:DataType="vm:WelcomeDialogViewModel"
        Title="Welcome to Logbert"
        Width="600" Height="500"
        CanResize="False"
        WindowStartupLocation="CenterOwner"
        Icon="/Assets/avalonia-logo.ico">

    <Design.DataContext>
        <vm:WelcomeDialogViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto,Auto">
        <!-- Header -->
        <Border Grid.Row="0"
                Background="{DynamicResource SystemAccentColor}"
                Padding="30,20">
            <StackPanel Spacing="5">
                <StackPanel Orientation="Horizontal" Spacing="15" HorizontalAlignment="Center">
                    <Image Source="/Assets/avalonia-logo.ico"
                           Width="48" Height="48"/>
                    <TextBlock Text="Logbert"
                               FontSize="36"
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock Text="Cross-Platform Log File Viewer"
                           FontSize="14"
                           Foreground="White"
                           Opacity="0.9"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding Version}"
                           FontSize="12"
                           Foreground="White"
                           Opacity="0.7"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Features Grid -->
        <ScrollViewer Grid.Row="1" Margin="20">
            <StackPanel Spacing="20">
                <TextBlock Text="Key Features"
                           FontSize="18"
                           FontWeight="SemiBold"/>

                <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto"
                      HorizontalAlignment="Stretch">
                    <!-- Feature 1 -->
                    <Border Grid.Row="0" Grid.Column="0"
                            Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                            CornerRadius="8" Padding="15" Margin="0,0,10,10">
                        <StackPanel Spacing="8">
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <PathIcon Data="M19,20H4C2.89,20 2,19.1 2,18V6C2,4.89 2.89,4 4,4H10L12,6H19A2,2 0 0,1 21,8H21L4,8V18L6.14,10H23.21L20.93,18.5C20.7,19.37 19.92,20 19,20Z"
                                          Width="24" Height="24"
                                          Foreground="{DynamicResource SystemAccentColor}"/>
                                <TextBlock Text="Multiple Log Formats"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock Text="Support for Log4Net, NLog, Syslog, Windows Event Log, and custom formats"
                                       TextWrapping="Wrap"
                                       Opacity="0.8"
                                       FontSize="12"/>
                        </StackPanel>
                    </Border>

                    <!-- Feature 2 -->
                    <Border Grid.Row="0" Grid.Column="1"
                            Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                            CornerRadius="8" Padding="15" Margin="10,0,0,10">
                        <StackPanel Spacing="8">
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <PathIcon Data="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M12,4A8,8 0 0,1 20,12A8,8 0 0,1 12,20A8,8 0 0,1 4,12A8,8 0 0,1 12,4M12,6A6,6 0 0,0 6,12A6,6 0 0,0 12,18A6,6 0 0,0 18,12A6,6 0 0,0 12,6M12,8A4,4 0 0,1 16,12A4,4 0 0,1 12,16A4,4 0 0,1 8,12A4,4 0 0,1 12,8Z"
                                          Width="24" Height="24"
                                          Foreground="{DynamicResource SystemAccentColor}"/>
                                <TextBlock Text="Real-Time Monitoring"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock Text="Live tail files and network receivers with automatic updates"
                                       TextWrapping="Wrap"
                                       Opacity="0.8"
                                       FontSize="12"/>
                        </StackPanel>
                    </Border>

                    <!-- Feature 3 -->
                    <Border Grid.Row="1" Grid.Column="0"
                            Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                            CornerRadius="8" Padding="15" Margin="0,0,10,10">
                        <StackPanel Spacing="8">
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <PathIcon Data="M14,12V19.88C14.04,20.18 13.94,20.5 13.71,20.71C13.32,21.1 12.69,21.1 12.3,20.71L10.29,18.7C10.06,18.47 9.96,18.16 10,17.87V12H9.97L4.21,4.62C3.87,4.19 3.95,3.56 4.38,3.22C4.57,3.08 4.78,3 5,3V3H19V3C19.22,3 19.43,3.08 19.62,3.22C20.05,3.56 20.13,4.19 19.79,4.62L14.03,12H14Z"
                                          Width="24" Height="24"
                                          Foreground="{DynamicResource SystemAccentColor}"/>
                                <TextBlock Text="Advanced Filtering"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock Text="Filter by log level, logger, thread, time range, and regex patterns"
                                       TextWrapping="Wrap"
                                       Opacity="0.8"
                                       FontSize="12"/>
                        </StackPanel>
                    </Border>

                    <!-- Feature 4 -->
                    <Border Grid.Row="1" Grid.Column="1"
                            Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                            CornerRadius="8" Padding="15" Margin="10,0,0,10">
                        <StackPanel Spacing="8">
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <PathIcon Data="M14.6,16.6L19.2,12L14.6,7.4L16,6L22,12L16,18L14.6,16.6M9.4,16.6L4.8,12L9.4,7.4L8,6L2,12L8,18L9.4,16.6Z"
                                          Width="24" Height="24"
                                          Foreground="{DynamicResource SystemAccentColor}"/>
                                <TextBlock Text="Lua Scripting"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock Text="Automate log analysis with custom Lua scripts"
                                       TextWrapping="Wrap"
                                       Opacity="0.8"
                                       FontSize="12"/>
                        </StackPanel>
                    </Border>

                    <!-- Feature 5 -->
                    <Border Grid.Row="2" Grid.Column="0"
                            Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                            CornerRadius="8" Padding="15" Margin="0,0,10,0">
                        <StackPanel Spacing="8">
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <PathIcon Data="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z"
                                          Width="24" Height="24"
                                          Foreground="{DynamicResource SystemAccentColor}"/>
                                <TextBlock Text="Powerful Search"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock Text="Full-text search with regex support and match highlighting"
                                       TextWrapping="Wrap"
                                       Opacity="0.8"
                                       FontSize="12"/>
                        </StackPanel>
                    </Border>

                    <!-- Feature 6 -->
                    <Border Grid.Row="2" Grid.Column="1"
                            Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                            CornerRadius="8" Padding="15" Margin="10,0,0,0">
                        <StackPanel Spacing="8">
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <PathIcon Data="M4,6H2V20A2,2 0 0,0 4,22H18V20H4V6M20,2H8A2,2 0 0,0 6,4V16A2,2 0 0,0 8,18H20A2,2 0 0,0 22,16V4A2,2 0 0,0 20,2M20,12L17.5,10.5L15,12V4H20V12Z"
                                          Width="24" Height="24"
                                          Foreground="{DynamicResource SystemAccentColor}"/>
                                <TextBlock Text="Cross-Platform"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock Text="Runs on Windows, macOS, and Linux with native look and feel"
                                       TextWrapping="Wrap"
                                       Opacity="0.8"
                                       FontSize="12"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <!-- Don't Show Again -->
        <Border Grid.Row="2"
                Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                Padding="20,10">
            <CheckBox IsChecked="{Binding DontShowAgain}"
                      Content="Don't show this dialog on startup"/>
        </Border>

        <!-- Buttons -->
        <Border Grid.Row="3" Padding="20,15">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Spacing="10">
                <Button Content="View Documentation"
                        Padding="15,8"
                        Command="{Binding OpenDocumentationCommand}"/>
                <Button Content="Get Started"
                        Padding="20,8"
                        Classes="accent"
                        Click="OnGetStartedClick"
                        IsDefault="True"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
