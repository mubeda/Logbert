<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:Logbert.ViewModels.Dialogs"
        mc:Ignorable="d" d:DesignWidth="550" d:DesignHeight="600"
        x:Class="Logbert.Views.Dialogs.KeyboardShortcutsDialog"
        x:DataType="vm:KeyboardShortcutsDialogViewModel"
        Title="Keyboard Shortcuts"
        Width="550" Height="600"
        CanResize="True"
        MinWidth="400"
        MinHeight="400"
        WindowStartupLocation="CenterOwner"
        Icon="/Assets/avalonia-logo.ico">

    <Design.DataContext>
        <vm:KeyboardShortcutsDialogViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto" Margin="20">
        <!-- Header with Search -->
        <StackPanel Grid.Row="0" Spacing="15" Margin="0,0,0,15">
            <TextBlock Text="Keyboard Shortcuts"
                       FontSize="20"
                       FontWeight="Bold"/>

            <TextBox Text="{Binding SearchFilter}"
                     Watermark="Search shortcuts..."
                     Classes="clearButton">
                <TextBox.InnerLeftContent>
                    <PathIcon Data="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z"
                              Width="16" Height="16"
                              Margin="8,0,0,0"
                              Opacity="0.5"/>
                </TextBox.InnerLeftContent>
            </TextBox>
        </StackPanel>

        <!-- Shortcuts List -->
        <ScrollViewer Grid.Row="1">
            <ItemsControl ItemsSource="{Binding Categories}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="vm:ShortcutCategory">
                        <StackPanel Margin="0,0,0,20">
                            <!-- Category Header -->
                            <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                                    CornerRadius="4"
                                    Padding="10,8"
                                    Margin="0,0,0,10">
                                <TextBlock Text="{Binding Name}"
                                           FontWeight="SemiBold"
                                           FontSize="14"/>
                            </Border>

                            <!-- Shortcuts in Category -->
                            <ItemsControl ItemsSource="{Binding Shortcuts}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate DataType="vm:ShortcutItem">
                                        <Grid ColumnDefinitions="150,*"
                                              Margin="10,4">
                                            <Border Grid.Column="0"
                                                    Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                                                    CornerRadius="4"
                                                    Padding="8,4"
                                                    HorizontalAlignment="Left">
                                                <TextBlock Text="{Binding Key}"
                                                           FontFamily="Consolas,Courier New,monospace"
                                                           FontWeight="SemiBold"/>
                                            </Border>
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding Description}"
                                                       VerticalAlignment="Center"
                                                       Opacity="0.9"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Close Button -->
        <Border Grid.Row="2"
                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                BorderThickness="0,1,0,0"
                Padding="0,15,0,0"
                Margin="0,15,0,0">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Spacing="10">
                <Button Content="Print..."
                        Padding="15,8"
                        IsEnabled="False"
                        ToolTip.Tip="Print shortcuts (coming soon)"/>
                <Button Content="Close"
                        Padding="20,8"
                        MinWidth="80"
                        Click="OnCloseClick"
                        IsDefault="True"
                        IsCancel="True"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
