<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:Couchcoding.Logbert.ViewModels.Dialogs.ReceiverSettings"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="350"
        x:Class="Couchcoding.Logbert.Views.Dialogs.ReceiverSettings.NLogDirReceiverSettingsView"
        x:DataType="vm:NLogDirReceiverSettingsViewModel"
        Title="NLog Directory Receiver Configuration"
        Width="500" Height="350"
        WindowStartupLocation="CenterOwner"
        CanResize="False">

    <DockPanel Margin="15">
        <!-- Buttons -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,15,0,0">
            <Button Content="OK" Width="80" Click="OnOkClick" IsDefault="True"/>
            <Button Content="Cancel" Width="80" Click="OnCancelClick" IsCancel="True"/>
        </StackPanel>

        <!-- Settings -->
        <StackPanel Spacing="15">
            <!-- Directory Path -->
            <StackPanel Spacing="5">
                <TextBlock Text="Log Directory Path:" FontWeight="SemiBold"/>
                <Grid ColumnDefinitions="*,Auto">
                    <TextBox Grid.Column="0"
                             Text="{Binding DirectoryPath}" />
                    <Button Grid.Column="1"
                            Content="Browse..."
                            Width="80"
                            Margin="5,0,0,0"
                            Click="OnBrowseClick"/>
                </Grid>
            </StackPanel>

            <!-- Filename Pattern -->
            <StackPanel Spacing="5">
                <TextBlock Text="Filename Pattern:" FontWeight="SemiBold"/>
                <TextBox Text="{Binding FilenamePattern}" />
                <TextBlock Text="Examples: *.log, *.txt, app*.log"
                           FontSize="11"
                           Opacity="0.7"/>
            </StackPanel>

            <!-- Options -->
            <CheckBox IsChecked="{Binding StartFromBeginning}"
                      Content="Start reading from beginning of files"/>

            <!-- Encoding -->
            <StackPanel Spacing="5">
                <TextBlock Text="File Encoding:" FontWeight="SemiBold"/>
                <ComboBox ItemsSource="{Binding AvailableEncodings}"
                          SelectedItem="{Binding SelectedEncoding}"
                          HorizontalAlignment="Stretch">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DisplayName}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>

            <!-- Info -->
            <Border Background="#F0F8FF"
                    BorderBrush="#B0C4DE"
                    BorderThickness="1"
                    Padding="10"
                    CornerRadius="4">
                <StackPanel Spacing="5">
                    <TextBlock Text="ðŸ’¡ Note:" FontWeight="SemiBold"/>
                    <TextBlock TextWrapping="Wrap"
                               Text="This receiver monitors all NLog XML log files matching the pattern in the specified directory. New files and changes will be detected automatically."/>
                </StackPanel>
            </Border>
        </StackPanel>
    </DockPanel>
</Window>
