<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:Logbert.ViewModels.Dialogs.ReceiverSettings"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="300"
        x:Class="Logbert.Views.Dialogs.ReceiverSettings.NLogFileReceiverSettingsView"
        x:DataType="vm:NLogFileReceiverSettingsViewModel"
        Title="NLog File Receiver Configuration"
        Width="500" Height="420"
        MinWidth="400" MinHeight="350"
        WindowStartupLocation="CenterOwner"
        CanResize="True">

    <DockPanel Margin="15">
        <!-- Buttons -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,15,0,0">
            <Button Content="OK" Width="80" Click="OnOkClick" IsDefault="True"/>
            <Button Content="Cancel" Width="80" Click="OnCancelClick" IsCancel="True"/>
        </StackPanel>

        <!-- Settings -->
        <ScrollViewer>
        <StackPanel Spacing="15">
            <!-- File Path -->
            <StackPanel Spacing="5">
                <TextBlock Text="Log File Path:" FontWeight="SemiBold"/>
                <Grid ColumnDefinitions="*,Auto">
                    <TextBox Grid.Column="0"
                             Text="{Binding FilePath}" />
                    <Button Grid.Column="1"
                            Content="Browse..."
                            Width="80"
                            Margin="5,0,0,0"
                            Click="OnBrowseClick"/>
                </Grid>
            </StackPanel>

            <!-- Options -->
            <CheckBox IsChecked="{Binding StartFromBeginning}"
                      Content="Start reading from beginning of file"/>

            <!-- Encoding -->
            <StackPanel Spacing="5">
                <TextBlock Text="File Encoding:" FontWeight="SemiBold"/>
                <ComboBox ItemsSource="{Binding AvailableEncodings}"
                          SelectedItem="{Binding SelectedEncoding}"
                          HorizontalAlignment="Stretch">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DisplayName}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>

            <!-- Info -->
            <Border Background="#F0F8FF"
                    BorderBrush="#B0C4DE"
                    BorderThickness="1"
                    Padding="10"
                    CornerRadius="4">
                <StackPanel Spacing="5">
                    <TextBlock Text="ðŸ’¡ Note:" FontWeight="SemiBold"/>
                    <TextBlock TextWrapping="Wrap"
                               Text="This receiver monitors NLog XML log files. The file will be watched for changes and new log entries will be loaded automatically."/>
                </StackPanel>
            </Border>
        </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
