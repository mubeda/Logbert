<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Logbert.ViewModels.Docking"
             xmlns:controls="using:Logbert.Views.Controls"
             xmlns:details="using:Logbert.Views.Controls.Details"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="500"
             x:Class="Logbert.Views.Docking.DetailsPanelView"
             x:DataType="vm:DetailsPanelViewModel">

    <DockPanel>
        <!-- Toolbar (matches old WinForms Message Details style) -->
        <Border DockPanel.Dock="Top"
                Background="#F0F0F0"
                Padding="4,2"
                BorderBrush="#D0D0D0"
                BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" Spacing="4">
                <Button Padding="4,2" ToolTip.Tip="Zoom In" Background="Transparent" BorderThickness="0">
                    <PathIcon Data="M15.5,14L20.5,19L19,20.5L14,15.5V14.71L13.73,14.43C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.43,13.73L14.71,14H15.5M9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14M12,10H10V12H9V10H7V9H9V7H10V9H12V10Z" Width="14" Height="14"/>
                </Button>
                <Button Padding="4,2" ToolTip.Tip="Zoom Out" Background="Transparent" BorderThickness="0">
                    <PathIcon Data="M15.5,14L20.5,19L19,20.5L14,15.5V14.71L13.73,14.43C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.43,13.73L14.71,14H15.5M9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14M7,9H12V10H7V9Z" Width="14" Height="14"/>
                </Button>
                <Separator Width="1" Background="#C0C0C0" Margin="4,2"/>
                <Button Padding="6,2" ToolTip.Tip="Copy all details to clipboard">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <PathIcon Data="M19,21H8V7H19M19,5H8A2,2 0 0,0 6,7V21A2,2 0 0,0 8,23H19A2,2 0 0,0 21,21V7A2,2 0 0,0 19,5M16,1H4A2,2 0 0,0 2,3V17H4V3H16V1Z" Width="12" Height="12"/>
                        <TextBlock Text="Copy Details" FontSize="11"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ContentControl Content="{Binding CurrentView}">
            <ContentControl.Styles>
                <Style Selector="ContentControl">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                </Style>
            </ContentControl.Styles>
        </ContentControl>
    </DockPanel>
</UserControl>
