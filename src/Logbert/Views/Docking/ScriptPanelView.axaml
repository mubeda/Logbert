<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Logbert.ViewModels.Docking"
             xmlns:controls="using:Logbert.Views.Controls"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="600"
             x:Class="Logbert.Views.Docking.ScriptPanelView"
             x:DataType="vm:ScriptPanelViewModel">

    <DockPanel>
        <!-- Header -->
        <Border DockPanel.Dock="Top"
                Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                Padding="10"
                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                BorderThickness="0,0,0,1">
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="10">
                    <TextBlock Text="Lua Script Editor"
                               FontSize="16"
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding ScriptEditorViewModel.FileName}"
                               VerticalAlignment="Center"
                               Opacity="0.7"/>
                    <TextBlock Text="*"
                               VerticalAlignment="Center"
                               Foreground="Red"
                               IsVisible="{Binding ScriptEditorViewModel.IsModified}"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="5">
                    <Button Content="New" Command="{Binding ScriptEditorViewModel.NewScriptCommand}" Padding="8,4"/>
                    <Button Content="Open" Command="{Binding ScriptEditorViewModel.OpenScriptCommand}" Padding="8,4"/>
                    <Button Content="Save" Command="{Binding ScriptEditorViewModel.SaveScriptCommand}" Padding="8,4"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Toolbar -->
        <Border DockPanel.Dock="Top"
                Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                Padding="10,5"
                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" Spacing="10">
                <Button Content="Execute"
                        Command="{Binding ScriptEditorViewModel.ExecuteScriptCommand}"
                        Padding="12,4">
                    <Button.Styles>
                        <Style Selector="Button">
                            <Setter Property="Background" Value="Green"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Style>
                    </Button.Styles>
                </Button>
                <Button Content="Clear Output"
                        Command="{Binding ScriptEditorViewModel.ClearOutputCommand}"
                        Padding="8,4"/>
                <Separator/>
                <TextBlock Text="{Binding ScriptEditorViewModel.StatusMessage}"
                           VerticalAlignment="Center"
                           Opacity="0.7"/>
            </StackPanel>
        </Border>

        <!-- Status Bar -->
        <Border DockPanel.Dock="Bottom"
                Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                Padding="10,5"
                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" Spacing="20">
                <TextBlock Text="{Binding CursorPositionText}" FontSize="11"/>
                <TextBlock Text="Lua" FontSize="11" Opacity="0.7"/>
            </StackPanel>
        </Border>

        <!-- Main Content - Split View -->
        <Grid RowDefinitions="2*,5,*">
            <!-- Script Editor -->
            <Border Grid.Row="0"
                    BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                    BorderThickness="0,0,0,1">
                <TextBox Text="{Binding ScriptEditorViewModel.ScriptText}"
                         TextWrapping="NoWrap"
                         AcceptsReturn="True"
                         AcceptsTab="True"
                         FontFamily="Consolas,Courier New,monospace"
                         FontSize="13"
                         Padding="10"
                         ScrollViewer.HorizontalScrollBarVisibility="Auto"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"/>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Row="1"
                          Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                          ResizeDirection="Rows"/>

            <!-- Output Panel -->
            <DockPanel Grid.Row="2">
                <TextBlock DockPanel.Dock="Top"
                           Text="Output"
                           FontWeight="Bold"
                           Padding="10,5"
                           Background="{DynamicResource SystemControlBackgroundAltHighBrush}"/>

                <ListBox ItemsSource="{Binding ScriptEditorViewModel.OutputMessages}"
                         FontFamily="Consolas,Courier New,monospace"
                         FontSize="11">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" TextWrapping="Wrap"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </Grid>
    </DockPanel>
</UserControl>
