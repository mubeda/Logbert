<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Couchcoding.Logbert.ViewModels.Docking"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="450"
             x:Class="Couchcoding.Logbert.Views.Docking.FilterPanelView"
             x:DataType="vm:FilterPanelViewModel">
    <StackPanel Spacing="10" Margin="10">
        <TextBlock Text="Filter" FontSize="16" FontWeight="Bold"/>

        <!-- Text Filter -->
        <TextBox Text="{Binding FilterText}"
                 Margin="0,10,0,0"/>

        <StackPanel Orientation="Horizontal" Spacing="10">
            <CheckBox IsChecked="{Binding CaseSensitive}"
                      Content="Case Sensitive"/>
            <CheckBox IsChecked="{Binding UseRegex}"
                      Content="Regex"/>
        </StackPanel>

        <!-- Log Level Filters -->
        <TextBlock Text="Log Levels" FontWeight="SemiBold" Margin="0,15,0,5"/>

        <CheckBox IsChecked="{Binding ShowTrace}"
                  Content="Trace"
                  Foreground="#808080"/>

        <CheckBox IsChecked="{Binding ShowDebug}"
                  Content="Debug"
                  Foreground="#0000FF"/>

        <CheckBox IsChecked="{Binding ShowInfo}"
                  Content="Info"
                  Foreground="#008000"/>

        <CheckBox IsChecked="{Binding ShowWarning}"
                  Content="Warning"
                  Foreground="#FFA500"/>

        <CheckBox IsChecked="{Binding ShowError}"
                  Content="Error"
                  Foreground="#FF0000"/>

        <CheckBox IsChecked="{Binding ShowFatal}"
                  Content="Fatal"
                  Foreground="#8B0000"/>
    </StackPanel>
</UserControl>
