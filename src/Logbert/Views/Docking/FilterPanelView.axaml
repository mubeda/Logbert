<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Couchcoding.Logbert.ViewModels.Docking"
             mc:Ignorable="d" d:DesignWidth="250" d:DesignHeight="400"
             x:Class="Couchcoding.Logbert.Views.Docking.FilterPanelView"
             x:DataType="vm:FilterPanelViewModel">
    <ScrollViewer>
        <StackPanel Margin="8" Spacing="8">
            <!-- Filter Text -->
            <TextBlock Text="Filter Text:" FontWeight="Bold"/>
            <TextBox Text="{Binding FilterText}"
                     Watermark="Enter filter text..."/>

            <StackPanel Spacing="4" Margin="0,4,0,0">
                <CheckBox IsChecked="{Binding CaseSensitive}"
                          Content="Case Sensitive"/>
                <CheckBox IsChecked="{Binding UseRegex}"
                          Content="Use Regular Expression"/>
            </StackPanel>

            <Separator Margin="0,8"/>

            <!-- Log Levels -->
            <TextBlock Text="Log Levels:" FontWeight="Bold"/>
            <StackPanel Spacing="4">
                <CheckBox IsChecked="{Binding ShowTrace}">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <Border Width="12" Height="12"
                                Background="#808080"
                                CornerRadius="2"/>
                        <TextBlock Text="Trace"/>
                    </StackPanel>
                </CheckBox>

                <CheckBox IsChecked="{Binding ShowDebug}">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <Border Width="12" Height="12"
                                Background="#0000FF"
                                CornerRadius="2"/>
                        <TextBlock Text="Debug"/>
                    </StackPanel>
                </CheckBox>

                <CheckBox IsChecked="{Binding ShowInfo}">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <Border Width="12" Height="12"
                                Background="#008000"
                                CornerRadius="2"/>
                        <TextBlock Text="Info"/>
                    </StackPanel>
                </CheckBox>

                <CheckBox IsChecked="{Binding ShowWarning}">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <Border Width="12" Height="12"
                                Background="#FFA500"
                                CornerRadius="2"/>
                        <TextBlock Text="Warning"/>
                    </StackPanel>
                </CheckBox>

                <CheckBox IsChecked="{Binding ShowError}">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <Border Width="12" Height="12"
                                Background="#FF0000"
                                CornerRadius="2"/>
                        <TextBlock Text="Error"/>
                    </StackPanel>
                </CheckBox>

                <CheckBox IsChecked="{Binding ShowFatal}">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <Border Width="12" Height="12"
                                Background="#8B0000"
                                CornerRadius="2"/>
                        <TextBlock Text="Fatal"/>
                    </StackPanel>
                </CheckBox>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
